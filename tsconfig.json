{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["es6"],
		"module": "commonjs",
		"rootDir": "./",
		"moduleResolution": "node10",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["*.ts", "**/*.ts, index.ts"],
	"exclude": ["dist", "node_modules", "scripts"]
}
